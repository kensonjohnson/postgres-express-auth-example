{
  "name": "react-express-vite-template-typescript",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --handle-input \"npm run frontend\" \"npm run backend\"",
    "frontend": "vite",
    "backend": "nodemon",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc -p frontend/tsconfig.json && vite build",
    "build:backend": "tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && tsc --noEmit",
    "start": "node build/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsc && node build/drizzle/migrate.js"
  },
  "dependencies": {
    "@types/uuid": "^9.0.8",
    "connect-pg-simple": "^9.0.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.1",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "highlight.js": "^11.9.0",
    "iconoir-react": "^7.7.0",
    "mailtrap": "^3.3.0",
    "marked": "^12.0.2",
    "marked-highlight": "^2.1.1",
    "nodemailer": "^6.9.13",
    "openai": "^4.47.1",
    "passport": "^0.7.0",
    "passport-magic-link": "^2.1.0",
    "pg": "^8.11.5",
    "pino": "^9.1.0",
    "pino-http": "^10.1.0",
    "pino-pretty": "^11.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.12.7",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/pg": "^8.11.5",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.22.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "nodemon": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
